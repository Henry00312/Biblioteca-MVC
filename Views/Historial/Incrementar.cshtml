@model Biblioteca_MVC.Models.Material

@{
    ViewData["Title"] = "Incrementar Cantidad";
}

<h2>Incrementar Cantidad</h2>

<h4>@Model.Titulo</h4>

<form asp-action="Incrementar">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="cantidad">Cantidad a incrementar:</label>
        <input type="number" name="cantidad" class="form-control" min="1" required />
    </div>
    <button type="submit" class="btn btn-primary">Incrementar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
