@model IEnumerable<Biblioteca_MVC.Models.Prestamo>

@{
    ViewData["Title"] = "Listado de Movimientos";
}

<div class="container mt-4">
    <h2>Historial de Préstamos y Devoluciones</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Registrar nuevo préstamo</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Tipo</th>
                <th>Fecha</th>
                <th>Material</th>
                <th>Persona (Cédula)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tipo</td>
                    <td>@item.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.Material?.Titulo</td>
                    <td>@item.Persona?.Cedula</td>
                    <td>
                        @if (item.Tipo == "Prestamo")
                        {
                            <a asp-action="Devolver" asp-route-id="@item.Id" class="btn btn-sm btn-success">Devolver</a>
                        }

                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-1">Ver</a>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
