@model Biblioteca_MVC.Models.Prestamo

@{
    ViewData["Title"] = "Detalle del Movimiento";
}

<div class="container mt-4">
    <h2>Detalle del Movimiento</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-4">Tipo de Movimiento</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipo)</dd>

        <dt class="col-sm-4">Fecha</dt>
        <dd class="col-sm-8">@Model.Fecha.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-4">Material</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Material.Titulo)</dd>

        <dt class="col-sm-4">Cédula de la Persona</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Persona.Cedula)</dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
    </div>
</div>
