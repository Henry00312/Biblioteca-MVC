@model IEnumerable<Biblioteca_MVC.Models.Material>

@{
    ViewData["Title"] = "Listado de Materiales";
}

<div class="container mt-4">
    <h2>Listado de Materiales</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Registrar nuevo material</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                <th>@Html.DisplayNameFor(model => model.CantidadRegistrada)</th>
                <th>@Html.DisplayNameFor(model => model.CantidadActual)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td>@item.FechaRegistro.ToString("yyyy-MM-dd")</td>
                    <td>@item.CantidadRegistrada</td>
                    <td>@item.CantidadActual</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-1">Ver</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
