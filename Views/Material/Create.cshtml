@model Biblioteca_MVC.Models.Material

@{
    ViewData["Title"] = "Registrar Material";
}

<div class="container mt-4">
    <h2 class="mb-3">Registrar nuevo material</h2>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="Titulo" class="control-label">Título</label>
            <input asp-for="Titulo" class="form-control" placeholder="Nombre del material" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="FechaRegistro" class="control-label">Fecha de Registro</label>
            <input asp-for="FechaRegistro" class="form-control" type="date" />
            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="CantidadRegistrada" class="control-label">Cantidad Registrada</label>
            <input asp-for="CantidadRegistrada" class="form-control" min="1" />
            <span asp-validation-for="CantidadRegistrada" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="CantidadActual" class="control-label">Cantidad Actual</label>
            <input asp-for="CantidadActual" class="form-control" min="1" />
            <span asp-validation-for="CantidadActual" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Registrar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
