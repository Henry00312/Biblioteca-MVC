@model Biblioteca_MVC.Models.Material

@{
    ViewData["Title"] = "Eliminar Material";
}

<div class="container mt-4">
    <h2 class="text-danger">¿Estás seguro que deseas eliminar este material?</h2>
    <p class="text-muted">Esta acción no se puede deshacer.</p>

    <hr />

    <dl class="row">
        <dt class="col-sm-4">Título</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Titulo)</dd>

        <dt class="col-sm-4">Fecha de Registro</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaRegistro)</dd>

        <dt class="col-sm-4">Cantidad Registrada</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.CantidadRegistrada)</dd>

        <dt class="col-sm-4">Cantidad Actual</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.CantidadActual)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
