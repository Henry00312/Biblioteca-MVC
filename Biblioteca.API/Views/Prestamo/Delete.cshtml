@using Biblioteca.Domain.Entities
@model Prestamo

@{
    ViewData["Title"] = "Detalle del Movimiento";
}

<div class="container mt-4">
    <h2 class="text-danger">¿Estás seguro de que deseas eliminar este registro?</h2>
    <p class="text-muted">Los préstamos y devoluciones hacen parte del historial. Eliminar un registro puede afectar la trazabilidad.</p>
    <hr />

    <dl class="row">
        <dt class="col-sm-4">Tipo de Movimiento</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipo)</dd>

        <dt class="col-sm-4">Fecha</dt>
        <dd class="col-sm-8">@Model.Fecha.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-4">Material</dt>
        <dd class="col-sm-8">
            @(Model.Material != null ? Model.Material.Titulo : "Sin material asignado")
        </dd>
        <dt class="col-sm-4">Cédula de la Persona</dt>
        <dd class="col-sm-8">
            @(Model.Persona != null ? Model.Persona.Cedula : "Sin persona asignada")
        </dd>
    </dl>

    @* Puedes comentar este formulario si decides no permitir eliminación *@
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
