@using Biblioteca.Domain.Entities
@model Persona

@{
    ViewData["Title"] = "Registrar Persona";
}

<div class="container mt-4">
    <h2>Registrar nueva persona</h2>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="Nombre" class="control-label">Nombre completo</label>
            <input asp-for="Nombre" class="form-control" placeholder="Ej. Juan Pérez" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Cedula" class="control-label">Cédula</label>
            <input asp-for="Cedula" class="form-control" placeholder="Ej. 1234567890" />
            <span asp-validation-for="Cedula" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Rol" class="control-label">Rol</label>
            <select asp-for="Rol" class="form-control" asp-items="ViewBag.Roles"></select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Registrar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
