@using Biblioteca.Domain.Entities
@model Persona

@{
    ViewData["Title"] = "Editar Persona";
}

<div class="container mt-4">
    <h2>Editar Persona</h2>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nombre" class="control-label">Nombre completo</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Cedula" class="control-label">Cédula</label>
            <input asp-for="Cedula" class="form-control" />
            <span asp-validation-for="Cedula" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Rol" class="control-label">Rol</label>
            <select asp-for="Rol" class="form-control" asp-items="ViewBag.Roles"></select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Guardar cambios" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
