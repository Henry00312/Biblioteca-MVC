@using Biblioteca.Domain.Entities
@model IEnumerable<Persona>

@{
    ViewData["Title"] = "Listado de Personas";
}

<div class="container mt-4">
    <h2>Listado de Personas Registradas</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Registrar nueva persona</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                <th>@Html.DisplayNameFor(model => model.Rol)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Cedula</td>
                    <td>@item.Rol</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-1">Ver</a>

                        <!-- Botón para eliminar persona (comentado si no es necesario) -->
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
